<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
										           and uncomment the following Encore helpers to start using Symfony UX #}
		<link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}
		{% block javascripts %}{#{{ encore_entry_script_tags('app') }}#}
			<!-- <script src="/build/runtime.js" defer></script>
												                 <script src="/build/app.js" defer></script> -->
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{ asset(path('home')) }}">SymBlog</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" href="{{ asset(path('blog')) }}">Articles</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ asset(path('blog_create')) }}">Créer un article</a>
						</li>
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link" href="{{ asset(path('app_logout')) }}">Se déconnecter</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{ asset(path('app_register')) }}">S'enregistrer</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ asset(path('app_login')) }}">Se connecter</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
		<div class="container"> {% block body %}{% endblock %}
			</div>
		</body>
	</html>
